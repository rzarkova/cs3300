<p style="color: green"><%= notice %></p>

<style>
body {
    background-color: lightgrey;
}
.centerPage {
  vertical-align: middle;
  text-align: center;
  margin-top: 7%;
}
</style>

<div class="conatiner centerPage bg-white text-dark"> 
  <%= render @project %>
  <div>
    <% if user_signed_in? %>
    <%= link_to "Edit this project", edit_project_path(@project) %> |
    <% end %>
    <%= link_to "Back to projects", projects_path %>
    <% if user_signed_in? %>
    <%= button_to "Destroy this project", @project, method: :delete, class: "btn btn-danger" %>
    <% end %>
  </div>
</div>
